{% extends 'base.html.twig' %}

{% block title %}Modifier Appartement{% endblock %}

{% block body %}
    <div class="row text-center">
        <div class="col-lg-6 col-sm-12">
            <a href="{{ path('batiment_appartement_index') }}" class="btn btn-dark text-white mb-3">
                <i class="fa fa-align-left"></i> Retour Ã  la liste
            </a>
        </div>
        <div class="col-lg-6 col-sm-12">
            {{ include('batiment/appartement/_delete_form.html.twig') }}
        </div>
    </div>

    {{ include('batiment/appartement/_form.html.twig', {'button_label': 'Sauvegarder'}) }}
{% endblock %}

{% block extra_javascripts %}
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script type="text/javascript">
        function demandeConfirmation() {
            event.preventDefault();
            let form = document.getElementById('form-delete');
            swal({
                title: 'Etes vous sure de vouloir supprimer cette appartement?',
                icon: "warning",
                buttons: true,
                dangerMode: true,
            }).then((willDelete) => {
                if (willDelete) {
                    form.submit();
                }
            });
        }
    </script>
{% endblock %}
